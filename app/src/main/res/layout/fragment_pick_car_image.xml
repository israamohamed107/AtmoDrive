<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    tools:context=".captain.createaccount.PickCarImageFragment"

    >

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/dm_sans"
        android:text="Pick car images"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Choose clear images for your car from\n those 6 sides"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_close"
        android:background="@drawable/circular_background"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_10sdp"
        />

    <ImageView
        android:id="@+id/img_first_side"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".48"
        android:src="@drawable/first_side"
        android:background="@drawable/dotted_background"
         />


    <ImageView
        android:id="@+id/img_insert_first_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_background"
        android:scaleType="center"
        android:src="@drawable/baseline_add_photo_alternate"
        app:layout_constraintBottom_toBottomOf="@id/img_first_side"
        app:layout_constraintStart_toStartOf="@+id/img_first_side"
        android:layout_margin="@dimen/_5sdp"
        />

    <ImageView
        android:id="@+id/img_second_side"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".48"
        android:src="@drawable/second_side"
        android:background="@drawable/dotted_background"/>

    <ImageView
        android:id="@+id/img_insert_second_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_background"
        android:scaleType="center"
        android:src="@drawable/baseline_add_photo_alternate"
        app:layout_constraintBottom_toBottomOf="@id/img_second_side"
        app:layout_constraintStart_toStartOf="@+id/img_second_side"
        android:layout_margin="@dimen/_5sdp"
        />


    <ImageView
        android:id="@+id/img_front_side"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintTop_toBottomOf="@+id/img_first_side"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".48"
        android:src="@drawable/front_side"
        android:background="@drawable/dotted_background"
        />

    <ImageView
        android:id="@+id/img_insert_front_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_background"
        android:scaleType="center"
        android:src="@drawable/baseline_add_photo_alternate"
        app:layout_constraintBottom_toBottomOf="@id/img_front_side"
        app:layout_constraintStart_toStartOf="@+id/img_front_side"
        android:layout_margin="@dimen/_5sdp"
        />


    <ImageView
        android:id="@+id/img_back_side"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintTop_toBottomOf="@+id/img_second_side"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".48"
        android:src="@drawable/back_side"
        android:background="@drawable/dotted_background"
        />

    <ImageView
        android:id="@+id/img_insert_back_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_background"
        android:scaleType="center"
        android:src="@drawable/baseline_add_photo_alternate"
        app:layout_constraintBottom_toBottomOf="@id/img_back_side"
        app:layout_constraintStart_toStartOf="@+id/img_back_side"
        android:layout_margin="@dimen/_5sdp"
        />


    <ImageView
        android:id="@+id/img_top_side"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintTop_toBottomOf="@+id/img_front_side"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".48"
        android:src="@drawable/top_side"
        android:background="@drawable/dotted_background"
        />

    <ImageView
        android:id="@+id/img_insert_top_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_background"
        android:scaleType="center"
        android:src="@drawable/baseline_add_photo_alternate"
        app:layout_constraintBottom_toBottomOf="@id/img_top_side"
        app:layout_constraintStart_toStartOf="@+id/img_top_side"
        android:layout_margin="@dimen/_5sdp"
        />

    <ImageView
        android:id="@+id/img_side"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintTop_toBottomOf="@+id/img_back_side"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".48"
        android:src="@drawable/car"
        android:background="@drawable/dotted_background"
        />

    <ImageView
        android:id="@+id/img_insert_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_background"
        android:scaleType="center"
        android:src="@drawable/baseline_add_photo_alternate"
        app:layout_constraintBottom_toBottomOf="@id/img_side"
        app:layout_constraintStart_toStartOf="@+id/img_side"
        android:layout_margin="@dimen/_5sdp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textSize="@dimen/_15ssp"
        app:cornerRadius="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>